<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Edit_Text_Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_View_Login_e_Cadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>

    <style name="Edit_Text_Cadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Edit_Text_Endereco">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/custom_edit_text_border</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>