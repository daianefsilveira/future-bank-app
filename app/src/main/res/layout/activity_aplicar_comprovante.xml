<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contas.AplicarComprovante">

    <ImageView
        android:id="@+id/header_aplicar_comprovante"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/rosa"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_clear_aplicar_comprovante"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_aplicar_comprovante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_aplicar_comprovante"
        app:srcCompat="@drawable/ic_clear" />


    <TextView
        android:id="@+id/tv_aplicar_comprovante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:layout_marginTop="30dp"
        android:text="Aplicação efetuada com sucesso"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_aplicar_comprovante" />


    <TextView
        android:id="@+id/tv_saldo_aplicar_comprovante"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/robotolight"
        android:text="Valor disponível na poupança "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_aplicar_comprovante"
        app:layout_constraintTop_toBottomOf="@+id/tv_aplicar_comprovante" />

    <TextView
        android:id="@+id/tv_saldo_disponivel_aplicar_comprovante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_saldo_aplicar_comprovante"
        app:layout_constraintStart_toEndOf="@+id/tv_saldo_aplicar_comprovante"
        app:layout_constraintTop_toTopOf="@+id/tv_saldo_aplicar_comprovante" />

    <TextView
        android:id="@+id/tv_saldo_cc_aplicar_comprovante"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/robotolight"
        android:text="Valor disponível na corrente "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_aplicar_comprovante"
        app:layout_constraintTop_toBottomOf="@+id/tv_saldo_aplicar_comprovante" />

    <TextView
        android:id="@+id/tv_saldo_disponivel_cc_aplicar_comprovante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_saldo_cc_aplicar_comprovante"
        app:layout_constraintStart_toEndOf="@+id/tv_saldo_cc_aplicar_comprovante"
        app:layout_constraintTop_toTopOf="@+id/tv_saldo_cc_aplicar_comprovante" />

    <TextView
        android:id="@+id/tv_descricao_aplicar_comprovante"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/robotolight"
        android:text="Você aplicou na poupança"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_aplicar_comprovante"
        app:layout_constraintTop_toBottomOf="@id/tv_saldo_disponivel_cc_aplicar_comprovante" />

    <TextView
        android:id="@+id/tv_valor_aplicar_comprovante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_descricao_aplicar_comprovante"
        app:layout_constraintStart_toEndOf="@+id/tv_descricao_aplicar_comprovante"
        app:layout_constraintTop_toTopOf="@+id/tv_descricao_aplicar_comprovante" />


</androidx.constraintlayout.widget.ConstraintLayout>